#!/usr/bin/env bash

op_domain () {
  DOMAIN_NAME=$1
  EXPORT_DIR=$2

  if [ ! -d $EXPORT_DIR ]
  then
    echo "Export directory doesn't exist!"
    exit 1
  fi

  pushd /var/www/miq/vmdb
  bin/rake "rhconsulting:miq_ae_datastore:export[${DOMAIN_NAME}, ${EXPORT_DIR}]"
  popd
}

op_dialogs () {
  EXPORT_DIR=$1

  if [ ! -d $EXPORT_DIR ]
  then
    echo "Export directory doesn't exist!"
    exit 1
  fi

  pushd /var/www/miq/vmdb
  bin/rake "rhconsulting:dialogs:export[${EXPORT_DIR}]"
  popd
}

op_service_catalogs () {
  EXPORT_DIR=$1

  if [ ! -d $EXPORT_DIR ]
  then
    echo "Export directory doesn't exist!"
    exit 1
  fi

  pushd /var/www/miq/vmdb
  bin/rake "rhconsulting:service_catalogs:export[${EXPORT_DIR}]"
  popd
}

op_roles () {
  EXPORT_DIR=$1

  if [ ! -d $EXPORT_DIR ]
  then
    echo "Export directory doesn't exist!"
    exit 1
  fi

  pushd /var/www/miq/vmdb
  bin/rake "rhconsulting:roles:export[${EXPORT_DIR}/roles.yml]"
  popd
}

op_tags () {
  EXPORT_DIR=$1

  if [ ! -d $EXPORT_DIR ]
  then
    echo "Export directory doesn't exist!"
    exit 1
  fi

  pushd /var/www/miq/vmdb
  bin/rake "rhconsulting:tags:export[${EXPORT_DIR}/tags.yml]"
  popd
